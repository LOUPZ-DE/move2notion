# Microsoft Graph API Konfiguration
MS_CLIENT_ID=your-microsoft-application-client-id
MS_TENANT_ID=common
MS_GRAPH_SCOPES=Notes.Read.All,Sites.Read.All,Tasks.Read,Group.Read.All

# Microsoft Graph Web-Authentifizierung (nur für Web-GUI)
MS_CLIENT_SECRET=your-microsoft-application-client-secret

# Notion API Konfiguration
NOTION_TOKEN=secret_your_notion_integration_token
NOTION_DATABASE_ID=your-default-notion-database-id

# Flask Web-GUI Konfiguration (nur für Web-GUI)
FLASK_SECRET_KEY=your-secret-key-for-sessions
FLASK_REDIRECT_URI=http://localhost:8080/callback
FLASK_PORT=8080
FLASK_DEBUG=False

# State Management
ON2N_STATE=~/.onenote2notion/state.json

# Logging (optional)
LOG_LEVEL=INFO
LOG_FILE=logs/migration.log

# Rate Limiting (requests per second)
NOTION_RATE_LIMIT=3.0
